<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.mariotti.developer.futureclock"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- used to get data from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- used to set an alarm on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ListOfAlarmActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AlarmCreateOrUpdateActivity"
            android:parentActivityName=".activities.ListOfAlarmActivity">
        </activity>
        <!--<activity android:name=".activities.FiredAlarmActivity">
        </activity>-->

        <receiver
            android:name=".broadcast.StartupReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
